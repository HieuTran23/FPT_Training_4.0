@model IEnumerable<FPT_Training_4._0.Models.ClassCourse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Class</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Class</h4>
        <p class="mb-0">You can't find class?<a class="text-primary" href="@Url.Action("Create")"> Create New</a></p>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus">@Html.DisplayNameFor(model => model.ClassName)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.DateFrom)</th>
                    <th>@Html.DisplayNameFor(model => model.DateTo)</th>
                    <th>@Html.DisplayNameFor(model => model.Course)</th>
                    <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="table-plus">@Html.DisplayNameFor(model => model.ClassName)</td>
                    <td>@item.Description</td>
                    <td>@item.DateFrom</td>
                    <td>@item.DateTo</td>
                    <td>@item.Course</td>
                    <td>@item.CreateDate</td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="@Url.Action("Details", new { id = item.Id })"><i class="dw dw-eye"></i> Detail</a>
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.Id })"><i class="dw dw-edit2"></i> Edit</a>
                                <a class="dropdown-item" href="@Url.Action("Delete", new { id = item.Id })"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>
