@model FPT_Training_4._0.Models.CourseType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Course Type</h4>
            <p class="mb-30">Create New Course Type</p>
        </div>
    </div>

    @using (Html.BeginForm("Edit", "CourseType"))
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">New Type Name</label>
                <div class="col-sm-12 col-md-10">
                    @Html.EditorFor(m => m.TypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Name" } })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">New Decription</label>
                <div class="col-sm-12 col-md-10">
                    @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12" style="display:flex;justify-content:flex-end">
                    <input class="btn btn-primary " type="submit" value="Update">
                </div>
            </div>
        </form>
        @Html.ActionLink("Back to List", "Index")
    }
</div>