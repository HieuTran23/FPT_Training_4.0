
@model IEnumerable<FPT_Training_4._0.Models.CourseType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Course Type</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</div>
<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Course Type</h4>
        <p class="mb-0">You can't find course type?' <a class="text-primary" href="@Url.Action("Create","CourseType")"> Create New</a></p>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Type Name</th>
                    <th>Description</th>
                    <th>Create Date</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table-plus">@item.TypeName</td>
                        <td>@item.Description</td>
                        <td>@item.CreateDate</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="@Url.Action("Edit","CourseType" ,new { id = item.Id })"><i class="dw dw-edit2"></i> Edit</a>
                                    <a class="dropdown-item" href="@Url.Action("Delete","CourseType",new { id = item.Id })"><i class="dw dw-delete-3"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>