@model FPT_Training_4._0.Models.UserEdit
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Account</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
    @Html.ActionLink("Back to List", "UsersWithRoles", "ManageUser")
</div>

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">User</h4>
            <p class="mb-30">Create New User</p>
        </div>
    </div>
    @using (Html.BeginForm("EditUser", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(m => m.UserName, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Full Name" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Full Name" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.FullName, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Contact, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", placeholder = "Contact" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Address, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.City, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Country, new { @class = "col-sm-12 col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12" style="display:flex; justify-content:flex-end">
                <input type="submit" class="btn btn-primary" value="Edit User">
            </div>
        </div>
    }
</div>
