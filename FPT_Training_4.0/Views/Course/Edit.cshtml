@model FPT_Training_4._0.Models.Course
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Course Type</h4>
            <p class="mb-30">Edit Course </p>
        </div>
    </div>

    @using (Html.BeginForm("Edit", "Course"))
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="form-group row">
                @Html.LabelFor(model => model.CourseType, htmlAttributes: new { @class = "col-sm-12 col-md-2 col-form-label" })
                <div class="col-sm-12 col-md-10">
                    @Html.DropDownListFor(m => m.CourseType, ViewBag.CourseType as SelectList, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">New Course Name</label>
                <div class="col-sm-12 col-md-10">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">New Decription</label>
                <div class="col-sm-12 col-md-10">
                    @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">New Decription</label>
                <div class="col-sm-12 col-md-10">
                    @Html.EditorFor(m => m.DateBegin, new { htmlAttributes = new { @class = "form-control", placeholder = "DateBegin" } })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">New Decription</label>
                <div class="col-sm-12 col-md-10">
                    @Html.EditorFor(m => m.DateEnd, new { htmlAttributes = new { @class = "form-control", placeholder = "DateEnd" } })
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12" style="display:flex;justify-content:flex-end">
                    <input class="btn btn-primary " type="submit" value="Update">
                </div>
            </div>
        </form>
        @Html.ActionLink("Back to List", "Index")
    }
</div>

