
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="title pb-20">
    <h2 class="h3 mb-0">FPT Overview</h2>
</div>

<div class="row pb-10">
    <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
        <div class="card-box height-100-p widget-style3">
            <div class="d-flex flex-wrap">
                <div class="widget-data">
                    <div class="weight-700 font-24 text-dark">@ViewBag.accountNumber</div>
                    <div class="font-14 text-secondary weight-500">Account</div>
                </div>
                <div class="widget-icon">
                    <div class="icon" data-color="#00eccf"><i class="icon-copy dw dw-user"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
        <div class="card-box height-100-p widget-style3">
            <div class="d-flex flex-wrap">
                <div class="widget-data">
                    <div class="weight-700 font-24 text-dark">@ViewBag.courseTypeNumber</div>
                    <div class="font-14 text-secondary weight-500">Course Type</div>
                </div>
                <div class="widget-icon">
                    <div class="icon" data-color="#ff5b5b"><span class="icon-copy ti-pencil"></span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
        <div class="card-box height-100-p widget-style3">
            <div class="d-flex flex-wrap">
                <div class="widget-data">
                    <div class="weight-700 font-24 text-dark">@ViewBag.courseNumber</div>
                    <div class="font-14 text-secondary weight-500">Course</div>
                </div>
                <div class="widget-icon">
                    <div class="icon"><i class="icon-copy fa fa-book" aria-hidden="true"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
        <div class="card-box height-100-p widget-style3">
            <div class="d-flex flex-wrap">
                <div class="widget-data">
                    <div class="weight-700 font-24 text-dark">@ViewBag.classCourseNumber</div>
                    <div class="font-14 text-secondary weight-500">Class</div>
                </div>
                <div class="widget-icon">
                    <div class="icon" data-color="#09cc06"><i class="icon-copy dw dw-calendar1" aria-hidden="true"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="title pb-20 pt-20">
    <h2 class="h3 mb-0">Quick Start (Coming soon)</h2>
</div>

<div class="row">
    <div class="col-md-4 mb-20">
        <a href="#" class="card-box d-block mx-auto pd-20 text-secondary">
            <div class="img pb-30">
                <img src="~/Template/MasterAdmin/vendors/images/banner-img.png" alt="">
            </div>
            <div class="content">
                <h3 class="h4">Services</h3>
                <p class="max-width-200 ">We provide superior health care in a compassionate maner</p>
            </div>
        </a>
    </div>
    <div class="col-md-4 mb-20">
        <a href="#" class="card-box d-block mx-auto pd-20 text-secondary">
            <div class="img pb-30">
                <img src="~/Template/MasterAdmin/vendors/images/img1.jpg" alt="">
            </div>
            <div class="content">
                <h3 class="h4">Medications</h3>
                <p class="max-width-200 ">Look for prescription and over-the-counter drug information.</p>
            </div>
        </a>
    </div>
    <div class="col-md-4 mb-20">
        <a href="#" class="card-box d-block mx-auto pd-20 text-secondary">
            <div class="img pb-30">
                <img src="~/Template/MasterAdmin/vendors/images/img2.jpg" alt="">
            </div>
            <div class="content">
                <h3 class="h4">Locations</h3>
                <p class="max-width-200 ">Convenient locations when and where you need them.</p>
            </div>
        </a>
    </div>
</div>
