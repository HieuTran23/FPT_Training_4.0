@model IEnumerable<FPT_Training_4._0.Models.ApplicationUser>
@{
    ViewBag.Title = "Select Trainer";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Class</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Trainer</h4>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Contact)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table-plus">@Html.DisplayFor(modelItem => item.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>
                            <a href="@Url.Action("CreateWithTrainer", "ClassCourses", new { trainer_id = item.Id, trainer_name = item.FullName }, null)"><i class="dw dw-add-user"></i>  Select</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>