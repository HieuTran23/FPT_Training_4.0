@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<!-- Default Basic Forms Start -->
<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">User Roles</h4>
            <p class="mb-30">Create New Role</p>
        </div>
    </div>
    @using (Html.BeginForm("Create", "Role", FormMethod.Post))
    {
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Role Name</label>
            <div class="col-sm-12 col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Role Name" } })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12" style="display:flex; justify-content:flex-end">
                <input type="submit" class="btn btn-primary" value="Create Role">
            </div>
        </div>
    }
</div>
<!-- Default Basic Forms End -->
